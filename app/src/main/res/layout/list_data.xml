<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:id="@+id/listid"
    android:elevation="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="7dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dashboard_list"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="SPK"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:text=" :"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/SPKData"
            android:layout_width="0dp"
            android:text="SPK64567"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Kawil"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:text=" :"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/KawilData"
            android:layout_width="0dp"
            android:text="Agus Hari"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Mandor"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:text=" :"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/MandorData"
            android:layout_width="0dp"
            android:text="Rian FIrman"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Lokasi"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:text=" :"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/LokasiData"
            android:layout_width="0dp"
            android:text="W03"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Tanggal SPK :"
            android:textStyle="bold"
            android:gravity="right"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TanggalSPKData"
            android:layout_width="0dp"
            android:gravity="right"
            android:text="2020-11-23"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"/>


    </LinearLayout>




</LinearLayout>